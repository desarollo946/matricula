
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table id="CursoTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Id curso</th>
            <th>Nombre</th>
            <th>Descripcion</th>
        </tr>
    </thead>
</table>


<link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />

@section Scripts{
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $("#CursoTable").dataTable({
                    "autoWidth": true,
                    "language": {
                        "emptyTable": "No se encontraron resultados.",
                       
                        "paginate": {
                            first: "Primero",
                            previous: "Anterior",
                            next: "Siguiente",
                            last: "Ultimo"
                        },
                        "lengthMenu": " _MENU_ ",
                        "info": "Mostrando registros del _START_ al _END_ de _TOTAL_ registros totales.",
                        "infoEmpty": "No hay registros para mostrar."
                    },
                    ajax: {
                        "url": "/Curso/listarCurso",
                        "method": "GET",
                        "dataSrc": function (datos) {
                            console.log(datos);
                            return datos;
                        }
                    },
                    columns: [
                        { "data": "IIDCURSO", },
                        { "data": "NOMBRE" },
                        { "data": "DESCRIPCION" }
                    ]
                });
            });
    </script>
}
